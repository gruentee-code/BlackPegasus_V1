<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="classes.RandomPointsController">
   <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox fx:id="hBox" alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="600.0">
               <children>
                  <Label fx:id="scoreLabel" text="Your score:">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <Pane fx:id="pane" onMouseClicked="#handleMousePressed" prefHeight="407.0" prefWidth="600.0">
               <children>
                  <Circle fx:id="startCircle" fill="#ff1f37" onMouseClicked="#handleStartCircleClicked" radius="40.0" smooth="false" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" />
               </children></Pane>
         </children>
      </VBox>
   </children>
</AnchorPane>
